<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.apengda.springwebplus.mapper.SysUserMapper">


    <resultMap id="SysUserRoles"
               type="com.github.apengda.springwebplus.entity.SysUser"
               extends="mybatis-plus_SysUser">
        <collection property="roleList"
                    javaType="ArrayList" ofType="com.github.apengda.springwebplus.entity.SysRole"
                    columnPrefix="r_"
                    resultMap="com.github.apengda.springwebplus.mapper.SysRoleMapper.mybatis-plus_SysRole">
        </collection>
    </resultMap>

    <select id="infoWithRole" resultMap="SysUserRoles">
        select u.id, u.username, u.nickname, u.password, u.salt, u.create_time, u.phone,
            r.name as r_name, r.id as r_id, r.id_code as r_id_code
        from sys_user u
        left join sys_user_role ur on ur.user_id = u.id
        left join sys_role r on r.id = ur.role_id
        <where>
            <if test="id != null">
                and = u.id = #{id}
            </if>
            <if test="username != null">
                and u.username = #{username}
            </if>
        </where>
    </select>
</mapper>